{% include 'produto/search.html.twig' %}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Código</th>
            <th>Nome</th>
            <th>Preço Unitário</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.codigo }}</td>
                <td>{{ produto.nome }}</td>
                <td>R$ {{ produto.preco|number_format(2, ',', '.') }}</td>
                <td>
                    <a href="{{ path('produto_edit', {'id': produto.id }) }}" class="btn btn-warning">Atualizar</a>
                    <a href="{{ path('produto_delete', {'id': produto.id }) }}" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
